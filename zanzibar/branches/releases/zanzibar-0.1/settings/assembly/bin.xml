<assembly>
  <id>bin</id>
  <formats>
    <format>tar.gz</format>
    <format>tar.bz2</format>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>bin</directory>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>**/*.sh</include>
      </includes>
      <excludes>
        <exclude>launch.sh</exclude><!-- specified individually in "files" section to allow filtering -->
      </excludes>
      <lineEnding>unix</lineEnding>
    </fileSet>
    <fileSet>
      <directory>bin</directory>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>**/*.bat</include>
      </includes>
      <excludes>
        <exclude>launch.bat</exclude><!-- specified individually in "files" section to allow filtering -->
      </excludes>
    </fileSet>

    <fileSet>
      <directory>${FREETTS_HOME}/lib</directory>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>jsapi.exe</include>
        <include>jsapi.sh</include>
        <include>cmu_us_kal.jar</include>
        <include>cmulex.jar</include>
        <include>en_us.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/resources/config</directory>
      <outputDirectory>/config</outputDirectory>
      <includes>
        <include>*.xml</include>
        <include>*.properties</include>
      </includes>
    </fileSet>
       <fileSet>
      <directory>src/main/resources/grammar</directory>
      <outputDirectory>/demo/grammar</outputDirectory>
      <includes>
        <include>*.gram</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/voicexml</directory>
      <outputDirectory>/demo/voicexml</outputDirectory>
      <includes>
        <include>**/*.*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/resources/prompts</directory>
      <outputDirectory>/demo/prompts</outputDirectory>
      <includes>
        <include>*.au</include>
        <include>*.wav</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>target/${pom.artifactId}-${project.version}.jar</source>
    </file>
    <file>
      <source>README.txt</source>
      <filtered>true</filtered>
    </file>
    <file>
      <source>LICENSE.txt</source>
    </file>
    <file>
      <source>NOTICE.txt</source>
    </file>
    <file>
      <source>bin/launch.sh</source>
      <outputDirectory>bin</outputDirectory>
      <lineEnding>unix</lineEnding>
      <filtered>true</filtered>
    </file>
    <file>
      <source>bin/launch.bat</source>
      <outputDirectory>bin</outputDirectory>
      <filtered>true</filtered>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <scope>runtime</scope>
      <includes>
        <include>org.speechforge:cairo-sip</include>
        <include>org.speechforge:cairo-client</include>
        <include>org.speechforge:cairo-rtp</include>
        <include>commons-logging:commons-logging</include>
        <include>commons-lang:commons-lang</include>
        <include>commons-cli:commons-cli</include>
        <include>commons-collections:commons-collections</include>
        <include>commons-configuration:commons-configuration</include>
        <include>commons-pool:commons-pool</include>
        <include>directory-network:mina</include>
        <include>log4j:log4j</include>
        <include>org.mrcp4j:mrcp4j</include>
        <include>org.slf4j:slf4j-simple</include>
        <include>javax.sip:jain-sip-api</include>
        <include>javax.sip:jain-sip-ri</include>
        <include>javax.sdp:nist-sdp</include>
        <include>concurrent:concurrent</include>
        <include>jakarta-regexp:jakarta-regexp</include>
        <include>org.asteriskjava:asterisk-java</include>
        <include>org.springframework:spring</include>
        <include>org.jvoicexml:jvxml</include>
        <include>org.jvoicexml:jvxml-xml</include>
        <include>org.jvoicexml:jvxml-jsapi1.0</include>
        <include>rhino:js</include>
        <include>commons-httpclient:commons-httpclient</include>
        <include>commons-codec:commons-codec</include>
        <include>com.sun.xml.stream:sjsxp</include>
        <include>javax.xml.stream:stax-api</include>
        <include>org.speechforge:cairo</include>
        <include>freetts:freetts</include>
        <include>sphinx:sphinx4</include>
        <include>sphinx:WSJ_8gau_13dCep_16k_40mel_130Hz_6800Hz</include>
        <include>sphinx:WSJ_8gau_13dCep_8kHz_31mel_200Hz_3500Hz</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
